#!/usr/bin/make -f

export DH_VERBOSE = 1
export CMAKE_BUILD_PARALLEL_LEVEL = $(shell nproc)

%:
	dh $@ --buildsystem=cmake

override_dh_auto_configure:
	dh_auto_configure -- \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_CXX_STANDARD=17

override_dh_shlibdeps:
	dh_shlibdeps 

override_dh_auto_install:
	dh_auto_install